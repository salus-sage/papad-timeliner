<!doctype html>
<html class="no-js" lang="en">
<head>
  <meta charset="utf-8">
  <title>{{ props.page.title or title }}</title>
  <meta name="description" content="{{ props.page.description }}">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <script src="https://use.typekit.net/xtb7ulc.js"></script>
  <script>
    try {
      Typekit.load({
        async: true
      });
    } catch (e) {
    }
  </script>
  {% for style in assets.styles %}
    {% if 'app' in style or 'micro-site' in style %}
      <link rel="stylesheet" href="{{ style }}">
    {% endif %}
  {% endfor %}
  {% block head %}{% endblock %}
</head>
<body>
<div class="grid-container full">
  <header class="primary-header primary-header--fixed">
    <div class="primary-title-bar title-bar" data-responsive-toggle="primary_menu" data-hide-for="large"
         style="display: none;">
      <button class="menu-burger" type="button" data-toggle="primary_menu" title="Menu">menu</button>
    </div>
    <div class="primary-logo">
      {% block title %}<strong><a class="primary-logo-link primary-logo-link--text" href="/">Micro
          Site</a></strong>{% endblock %}
    </div>
    <div class="primary-menu top-bar" id="primary_menu">
      <div class="top-bar-right">
        <ul class="menu">
          {% for title, collection in collections %}
            {% if(collection|length) %}
              <li class="menu__items">
                <a
                  href="{{ pagePrefix }}/{{ collection[0].paths.dir }}{% if collection[0].paths.name != 'index' %}/{{ collection[0].paths.name }}{% endif %}">{{ menuMap[title] or title }}</a>
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>
    </div>
  </header>
  <div class="primary-header-placeholder"></div>
  {% if hero %}
    <section class="hero" style="background-image: url({{ hero.image }})">
      {% if(hero.headline or hero.text) %}
        <div class="hero__box">
          <h1 class="hero__box--headline">{{ hero.headline }}</h1>
          <p class="hero__box--text">
            {{ hero.text }}
          </p>
        </div>
      {% endif %}
    </section>
  {% endif %}
  <section class="content-main markdown-body {% if fullWidth %}content-main--full-width{% endif %}">
    {{ contents|safe }}
  </section>
  <footer class="footer footer--spaced">
    <div class="grid-container footer__content">
      <p class="footer__content--heading h1">{{ footerSiteName or siteName }}</p>
      <p class="footer__content--text">{{ footerTagLine or 'created by the Cultural Heritage Team at Digirati' }}</p>
      <a href="https://digirati.com/">
        <img class="footer__content--logo" src="https://dlcs.info/assets/img/digirati-logo-white-green.svg" alt="">
      </a>
      {% if imageCredits %}
        <div class="footer__content--image-credits">
          <a href="{{ credits }}">Image Credits</a>
        </div>
      {% endif %}
    </div>
  </footer>
</div>
{% if(assets.manifest) %}
  <script type="application/javascript">{{ assets.manifest.content() | safe }}</script>
{% endif %}
{% if(assets.vendor) %}
  <script type="text/javascript" src="{{ assets.vendor.url }}"></script>
{% endif %}
{% if(assets.app) %}
  <script type="text/javascript" src="{{ assets.app.url }}"></script>
{% endif %}
{% if(assets['micro-site']) %}
  <script type="text/javascript" src="{{ assets['micro-site'].url }}"></script>
{% endif %}
{% block footerAssets %}{% endblock %}
</body>
</html>
